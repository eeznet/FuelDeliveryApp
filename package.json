{
  "name": "fuel-delivery-app",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./models/*": "./models/*.mjs",
    "./controllers/*": "./controllers/*.mjs"
  },
  "scripts": {
    "start": "node server.mjs",
    "dev": "nodemon server.mjs",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "build": "npm install",
    "predeploy": "node scripts/test-deployment.js",
    "deploy": "git push render main"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "pg": "^8.11.3",
    "socket.io": "^4.7.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^(\\.{1,2}/.*)\\.mjs$": "$1"
    },
    "testMatch": [
      "**/test/**/*.test.mjs"
    ],
    "setupFilesAfterEnv": [
      "./test/jest.setup.mjs"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  }
}
